{
    "extends": "@vue/tsconfig/tsconfig.json",
    "include": ["resources/js/**/*.ts", "resources/js/**/*.vue"],
    "compilerOptions": {
        "allowJs": true,
        "paths": {
            "@/*": ["./resources/js/*"]
        },
        "types": ["vue", "vite/client"],
    },
    "vueCompilerOptions": {
        "plugins": [
            "@vue/language-plugin-pug"
        ]
    },
    "references": [{ "path": "./tsconfig.node.json" }]
}
