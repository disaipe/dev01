{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./resources/js/*"
      ]
    },
    "types": [
      "vue",
      "vite/client"
    ],
    "allowJs": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.vue"
  ],
  "vueCompilerOptions": {
    "plugins": [
      "@vue/language-plugin-pug"
    ]
  }
}
